<body>
<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="/users/new">Sign Up</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="/login">Login</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="/">Home</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

<%= yield %>

  <footer>
        <div class="container text-center">
            <h4 style="font-size: 10pt; margin:0"> &copyWDI Shortstack. 2016. </h4>
        </div>
    </footer>



    <!-- jQuery -->
    <%= javascript_include_tag 'jquery', 'data-turbolinks-track' => true %>

    <!-- Bootstrap Core JavaScript -->
    <%= javascript_include_tag 'bootstrap.min', 'data-turbolinks-track' => true %>

    <!-- Plugin JavaScript-->
    <%= javascript_include_tag 'jquery.easing.min', 'data-turbolinks-track' => true %>

    <!-- Custom Theme JavaScript -->
    <%= javascript_include_tag 'main', 'data-turbolinks-track' => true %>

    <!-- Google Maps API Key  -->
    <%= javascript_include_tag 'googleAPI', 'data-turbolinks-track' => true %>
